<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >

    <com.whing.external.SlideMenu
        android:id="@+id/slide_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/layout_menu" />

        <LinearLayout
            android:id="@+id/hall_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/navigation_height"
                android:background="@drawable/navigation_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_left"
                    android:layout_width="@dimen/navigation_logo_dimen"
                    android:layout_height="@dimen/navigation_logo_dimen"
                    android:layout_marginLeft="@dimen/navigation_logo_left_margin"
                    android:background="@drawable/logo_white" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/navigation_text_logo_margin"
                    android:layout_weight="0.79"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="@string/navigation_title"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/navigation_text_size" />

                <com.whing.imgcut.CircleImg
                    android:id="@+id/hall_user_image_navigation_right"
                    android:layout_width="@dimen/navigation_userlogo_dimen"
                    android:layout_height="@dimen/navigation_userlogo_dimen"
                    android:layout_marginRight="@dimen/navigation_logo_right_margin" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/hall_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            
            <LinearLayout
                android:id="@+id/hall_list_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_height"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btn_newOne"
                    android:layout_width="@dimen/table_height"
                    android:layout_height="@dimen/table_height"
                    android:background="@drawable/linearlayout_frame"
                    android:scaleType="fitXY"
                    android:padding="@dimen/hall_new_one_image_padding"
                    android:src="@drawable/new_one" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/table_height_small"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/run"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/table_height_small"
                            android:background="@drawable/linearlayout_frame"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/run_image"
                                android:layout_width="@dimen/table_picture_dimen"
                                android:layout_height="@dimen/table_picture_dimen"
                                android:layout_marginLeft="@dimen/table_picture_margin_left"
                                android:layout_marginTop="@dimen/table_picture_margin_top"
                                android:scaleType="fitXY"
                                android:src="@drawable/run_yellow" />

                            <TextView
                                android:layout_width="@dimen/table_picture_dimen"
                                android:layout_height="@dimen/table_picture_dimen"
                                android:gravity="bottom"
                                android:text="@string/run"
                                android:textSize="@dimen/table_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ball"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="@dimen/table_height_small"
                            android:background="@drawable/linearlayout_frame"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/ball_image"
                                android:layout_width="@dimen/table_picture_dimen"
                                android:layout_height="@dimen/table_picture_dimen"
                                android:layout_marginLeft="@dimen/table_picture_margin_left"
                                android:layout_marginTop="@dimen/table_picture_margin_top"
                                android:scaleType="fitXY"
                                android:src="@drawable/ball_yellow" />

                            <TextView
                                android:layout_width="@dimen/table_picture_dimen"
                                android:layout_height="@dimen/table_picture_dimen"
                                android:gravity="bottom"
                                android:text="@string/ball"
                                android:textSize="@dimen/table_text_size" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/table_height_small"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/exercise"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="@dimen/table_height_small"
                            android:background="@drawable/linearlayout_frame"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/exercise_image"
                                android:layout_width="@dimen/table_picture_dimen"
                                android:layout_height="@dimen/table_picture_dimen"
                                android:layout_marginLeft="@dimen/table_picture_margin_left"
                                android:layout_marginTop="@dimen/table_picture_margin_top"
                                android:scaleType="fitXY"
                                android:src="@drawable/exercise_yellow" />

                            <TextView
                                android:layout_width="@dimen/table_picture_dimen"
                                android:layout_height="@dimen/table_picture_dimen"
                                android:gravity="bottom"
                                android:text="@string/exercise"
                                android:textSize="@dimen/table_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/other"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="@dimen/table_height_small"
                            android:background="@drawable/linearlayout_frame"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/other_image"
                                android:layout_width="@dimen/table_picture_dimen"
                                android:layout_height="@dimen/table_picture_dimen"
                                android:layout_marginLeft="@dimen/table_picture_margin_left"
                                android:layout_marginTop="@dimen/table_picture_margin_top"
                                android:scaleType="fitXY"
                                android:src="@drawable/other_yellow" />

                            <TextView
                                android:layout_width="@dimen/table_picture_dimen"
                                android:layout_height="@dimen/table_picture_dimen"
                                android:gravity="bottom"
                                android:text="@string/other"
                                android:textSize="@dimen/table_text_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.whing.external.MyListview
                    android:id="@+id/hall_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/listview_margin_top"/>
                
            </LinearLayout>
            
                
            </LinearLayout>
            
            </ScrollView>
        </LinearLayout>
        
    </com.whing.external.SlideMenu>

</LinearLayout>