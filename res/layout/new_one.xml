<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/navigation_height"
        android:background="@drawable/navigation_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/new_one_navigation_left"
            android:layout_width="@dimen/navigation_back_width"
            android:layout_height="@dimen/navigation_back_height"
            android:layout_marginLeft="@dimen/navigation_logo_left_margin"
            android:background="@drawable/navigation_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/navigation_text_logo_margin"
            android:layout_marginRight="@dimen/new_one_right_margin"
            android:layout_weight="0.79"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/new_one_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/new_one_text_size" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="bottom"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingTop="@dimen/user_padding_top" >

                <com.whing.imgcut.CircleImg
                    android:id="@+id/new_one_user_image"
                    android:layout_width="@dimen/user_image_standard"
                    android:layout_height="@dimen/user_image_standard"
                    android:layout_marginLeft="@dimen/user_image_margin_left" />

                <TextView
                    android:id="@+id/new_one_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/user_image_margin_left"
                    android:text="temp"
                    android:textSize="@dimen/user_name_size" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="bottom"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingTop="@dimen/user_padding_top" >

                <TextView
                    android:layout_width="@dimen/text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_view_margin_left"
                    android:text="@string/new_one_class"
                    android:textSize="@dimen/text_size" >
                </TextView>

                <RadioGroup
                    android:id="@+id/new_one_class_choose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/new_one_class_run"
                        android:layout_width="@dimen/user_image_standard"
                        android:layout_height="@dimen/user_image_standard"
                        android:layout_marginLeft="@dimen/user_image_margin_left"
                        android:background="@drawable/radio_button_run"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/new_one_class_ball"
                        android:layout_width="@dimen/user_image_standard"
                        android:layout_height="@dimen/user_image_standard"
                        android:layout_marginLeft="@dimen/user_image_margin_left"
                        android:background="@drawable/radio_button_ball"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/new_one_class_exercise"
                        android:layout_width="@dimen/user_image_standard"
                        android:layout_height="@dimen/user_image_standard"
                        android:layout_marginLeft="@dimen/user_image_margin_left"
                        android:background="@drawable/radio_button_exercise"
                        android:button="@null" />

                    <RadioButton
                        android:id="@+id/new_one_class_other"
                        android:layout_width="@dimen/user_image_standard"
                        android:layout_height="@dimen/user_image_standard"
                        android:layout_marginLeft="@dimen/user_image_margin_left"
                        android:background="@drawable/radio_button_other"
                        android:button="@null" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="bottom"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingTop="@dimen/user_padding_top" >

                <TextView
                    android:layout_width="@dimen/text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_view_margin_left"
                    android:text="@string/new_one_name"
                    android:textSize="@dimen/text_size" >
                </TextView>

                <EditText
                    android:id="@+id/new_one_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_one_text_bg"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="bottom"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingTop="@dimen/user_padding_top" >

                <TextView
                    android:layout_width="@dimen/text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_view_margin_left"
                    android:text="@string/new_one_start_time"
                    android:textSize="@dimen/text_size" >
                </TextView>

                <EditText
                    android:id="@+id/new_one_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_one_text_bg"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="none"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="bottom"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingTop="@dimen/user_padding_top" >

                <TextView
                    android:layout_width="@dimen/text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_view_margin_left"
                    android:text="@string/new_one_end_time"
                    android:textSize="@dimen/text_size" >
                </TextView>

                <EditText
                    android:id="@+id/new_one_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_one_text_bg"
                    android:clickable="true"
                    android:focusable="false"
                    android:inputType="none"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="bottom"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingTop="@dimen/user_padding_top" >

                <TextView
                    android:layout_width="@dimen/text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_view_margin_left"
                    android:text="@string/new_one_meet_place"
                    android:textSize="@dimen/text_size" >
                </TextView>

                <EditText
                    android:id="@+id/new_one_meet_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_one_text_bg"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="bottom"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingTop="@dimen/user_padding_top" >

                <TextView
                    android:layout_width="@dimen/text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_view_margin_left"
                    android:text="@string/new_one_number_limit"
                    android:textSize="@dimen/text_size" >
                </TextView>

                <EditText
                    android:id="@+id/new_one_number_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_one_text_bg"
                    android:numeric="integer"
                    android:singleLine="true" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="bottom"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingTop="@dimen/user_padding_top" >

                <TextView
                    android:layout_width="@dimen/text_view_width"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_view_margin_left"
                    android:text="@string/new_one_something"
                    android:textSize="@dimen/text_size" >
                </TextView>

                <EditText
                    android:id="@+id/new_one_something"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_one_text_bg" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingRight="@dimen/user_padding_right"
                android:paddingTop="@dimen/user_padding_top" >

                <ToggleButton
                    android:id="@+id/new_one_need_accept"
                    android:layout_width="@dimen/user_accept_radio_button_size"
                    android:layout_height="@dimen/user_accept_radio_button_size"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/radio_button_in_need_accept"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/new_one_need_accept_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:text="@string/new_one_need_accept"
                    android:textSize="@dimen/user_accept_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_bottom"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:layout_marginTop="@dimen/margin_top"
                android:gravity="right"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/user_padding_bottom"
                android:paddingRight="@dimen/user_padding_right"
                android:paddingTop="@dimen/user_padding_top" >

                <Button
                    android:id="@+id/new_one_ensure"
                    android:layout_width="@dimen/user_new_one_accept_size"
                    android:layout_height="@dimen/user_new_one_accept_size"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/radio_button_new_one_normal"
                    android:text="@string/new_one_ensure"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>