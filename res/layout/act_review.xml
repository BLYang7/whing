<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" 
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <com.whing.imgcut.CircleImg
            android:id="@+id/review_user_image"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:src="@drawable/default_photo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/review_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/act_review_name_size" />

                <TextView
                    android:id="@+id/remind_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="回复"
                    android:textSize="@dimen/act_review_name_size" />

                <TextView
                    android:id="@+id/response_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show"
                    android:textColor="@color/color_blue"
                    android:textSize="@dimen/act_review_name_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/review_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:text="content"
                android:textSize="@dimen/act_review_content_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>