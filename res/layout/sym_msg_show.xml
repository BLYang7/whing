<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/simple_message_height"
    android:orientation="horizontal"
     >
    
    <ImageView
        android:id="@+id/system_message_item_image"
        android:layout_width="@dimen/system_message_image_dimen"
        android:layout_height="@dimen/system_message_image_dimen"
        android:layout_marginLeft="@dimen/simple_message_image_margin_left"
      	android:layout_marginTop="@dimen/simple_message_image_margin_top"
        android:layout_marginBottom="@dimen/simple_message_image_margin_bottom"
        android:background="@drawable/logo_whing"
        android:layout_gravity="center_vertical"
        />
    
    <TextView
        android:id="@+id/system_message_item_text"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="@dimen/simple_message_height"
        android:gravity="center_vertical"
        android:text="temp"
        android:textSize="@dimen/simple_message_text_size"
        android:padding="@dimen/simple_message_text_padding"
        />

    <TextView
        android:id="@+id/system_message_item_time"
        android:layout_width="@dimen/simple_message_time_show_width"
        android:layout_height="@dimen/simple_message_height"
        android:layout_gravity="right"
        android:text="temp"
        android:layout_marginRight="2dp"
        android:textSize="@dimen/simple_message_time_show_text_size"
        android:gravity="center"
        
        />
</LinearLayout>
