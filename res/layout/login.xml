<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/login_app_name_margin_top"
        android:gravity="center"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="互"
            android:gravity="right"
            android:textSize="@dimen/login_app_name_text_size"
            android:textColor="@color/color_dark_blue"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·"
            android:textSize="@dimen/login_app_name_text_size_plus"
            android:gravity="center"
            android:textColor="@color/color_yellow"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="应"
            android:textSize="@dimen/login_app_name_text_size"
            android:gravity="left"
            android:textColor="@color/color_yellow"
            />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_area_height"
        android:layout_marginTop="20dp"
        android:background="@color/color_blue"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/login_input_area_margin_left"
        android:padding="@dimen/login_input_area_padding"
        android:layout_marginRight="@dimen/login_input_area_margin_right">
        
        <EditText
            android:id="@+id/username_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/login_text_size"
            android:textColor="@color/color_white"
            android:hint="@string/login_username_hint"
            android:background="@drawable/background_login_text_bg"
            />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_area_height"
        android:background="@color/color_blue"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/login_input_area_margin_left"
        android:padding="@dimen/login_input_area_padding"
        android:layout_marginRight="@dimen/login_input_area_margin_right"
        android:gravity="center_vertical">
        
        <EditText
            android:id="@+id/password_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:password="true"
            android:gravity="center_vertical"
            android:textSize="@dimen/login_text_size"
            android:textColor="@color/color_white"
            android:hint="@string/login_password_hint"
            android:background="@drawable/background_login_text_bg"
            />
        
        <Button
            android:id="@+id/signin_button"
            android:layout_width="@dimen/login_signin_button_width"
            android:layout_height="@dimen/login_signin_button_height"
            android:background="@drawable/go"
            android:gravity="right|center_vertical"
            android:layout_gravity="right|center_vertical"
            />
        
    </LinearLayout>
    
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_input_area_height"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/login_input_area_margin_left"
        android:padding="@dimen/login_input_area_padding"
        android:layout_marginRight="@dimen/login_input_area_margin_right"
        android:gravity="center_vertical">
        
        <TextView
            android:id="@+id/register_link"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/login_text_size"
            android:textColor="@color/color_blue"
            android:text="@string/login_register"
            />
        
        <TextView
            android:id="@+id/signin_jaccount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/login_text_size"
            android:textColor="@color/color_blue"
            android:text="@string/login_jaccount"
            />
        
    </LinearLayout>

</LinearLayout>